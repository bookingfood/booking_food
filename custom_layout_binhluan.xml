<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/containerbinhluan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimgbl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:gravity="center"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/txtTieudebl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alo"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtnoidungbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quán sạch, đẹp, giá cả phải "/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtDiembl1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10/10"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerHinhBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorBackgroungTrangChu"></View>
    </LinearLayout>
</LinearLayout>