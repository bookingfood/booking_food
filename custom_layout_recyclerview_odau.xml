<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width='match_parent'
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/cardView"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDiemTrungBinhQuanAn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/background_cycle"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAccent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/tenquananOdau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gogi House"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtDiaChiQuanAnOdau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="47 dien bien phu"/>
            </LinearLayout>
            <TextView
                android:id="@+id/km"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6.6 km"
                android:gravity="bottom"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgHinhQuanAnOdau"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"/>
        <Button
            android:id="@+id/btnDatmonOdau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:text="@string/datmon"
            android:textAllCaps="false"/>
        <LinearLayout
            android:id="@+id/containerbinhluan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimgbl"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:gravity="center"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/txtTieudebl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alo"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtnoidungbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quán sạch, đẹp, giá cả phải "/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtDiembl1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10/10"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/containerbinhluan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimgbl2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user"
                android:gravity="center"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/txtTieudebl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ola"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtnoidungbl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quán có nhiều view đẹp, nhân viên thân "/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtdiembl2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9/10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <TextView
                android:id="@+id/txtTongBinhLuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="0"
                />
            <TextView
                android:id="@+id/txtTongHinhBinhLuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="0"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>